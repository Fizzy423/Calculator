<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- состояние нажатия -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF9800"/> <!-- цвет при нажатии -->
            <corners android:radius="16dp"/> <!-- скруглённые углы -->
            <padding
                android:left="16dp"
                android:top="8dp"
                android:right="16dp"
                android:bottom="8dp"/>
        </shape>
    </item>
    <!-- обычное состояние -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFC107"/> <!-- основной цвет -->
            <corners android:radius="16dp"/>
            <padding
                android:left="16dp"
                android:top="8dp"
                android:right="16dp"
                android:bottom="8dp"/>
        </shape>
    </item>
</selector>
